<div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 sidebar-warp columns">
	<div class="row">
		<aside class="zm-post-lay-e-area col-xs-12 col-sm-6 col-md-6 col-lg-12 hidden-md featured-posts">
		<div class="row mb-40">
			<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
			<div class="section-title">
				<p class="h6 header-color inline-block uppercase">Bài viết nổi bật</p>
			</div>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
			<div class="zm-posts">
				<% if (blogsMostView && blogsMostView.length > 0) { %>
					<% blogsMostView.forEach(blogInfo => { %>
						<%-include ./item_right.ejs%>
					<% }) %>
				<% } %>
			</div>
			</div>
		</div>
		</aside>
		<aside class="zm-post-lay-e-area col-xs-12 col-sm-6 col-md-6 mt-60 col-lg-12 hidden-md">
		<div class="row mb-20">
			<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
			<div class="section-title">
				<p class="h6 header-color inline-block uppercase">Có thể bạn thích</p>
			</div>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
			<div class="zm-posts">
				<% if (blogsRef && blogsRef.length > 0) { %>
					<% blogsRef.forEach(blogInfo => { %>
						<%-include ./item_right.ejs%>
					<% }) %>
				<% } %>
			</div>
			</div>
		</div>
		</aside>
		<aside class="zm-tagcloud-list col-xs-12 col-sm-6 col-md-6 col-lg-12 ">
		<div class="row">
			<div class="col-md-12">
				<%-include ./tags.ejs%>
			</div>
		</div>
		</aside>
	</div>
	</div>