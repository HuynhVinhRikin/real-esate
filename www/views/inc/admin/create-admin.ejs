<div class="content-page">
        <!-- Start content -->
    <div class="content">
        <div class="container-fluid">
            <br><br>
            <div class="row">
                <div class="col-lg-12">
                    <div class="card m-b-20">
                        <div class="card-body">
                            <div class="alert alert-info" role="alert"
                                ><h4 class="alert-heading font-18"><strong>Lưu Ý Quản Lý Group Admin</strong>!</h4>
                                <p>
                                    Các Nhóm Tài Khoản Hiện Tại Hỗ Trợ (3)
                                </p>
                                <p class="mb-0">
                                    0. SuperAdmin (Root Admin)
                                </p>
                                <p class="mb-0">
                                    1. Admin
                                </p>
                                <p class="mb-0">
                                    2. Editor
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card m-b-20">
                        <div class="card-body">
                            <div class="form-group row">
                                <div class="col-md-6">
                                    <label for="example-text-input" class="col-sm-2 col-form-label">Họ Tên</label>
                                    <div class="col-sm-10">
                                        <input class="form-control" type="text"placeholder="..." id="fullname"
                                            value="<%=infoAdmin && infoAdmin.fullname && infoAdmin.fullname%>"
                                        >
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label for="example-text-input" class="col-sm-2 col-form-label">Group</label>
                                    <div class="col-sm-10">
                                        <select class="form-control" id="groupID">
                                            <%if(listGroup){%>
                                                <%listGroup.length > 0 && listGroup.forEach(key => {%>
                                                    <option value="<%=key._id%>" <% if (infoAdmin && infoAdmin.group._id.toString() == key._id.toString() ) { %>
                                                        selected
                                                    <% } %> ><%=key.name%></option>
                                                <%})%>
                                            <%}%>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-6">
                                    <label for="example-text-input" class="col-sm-2 col-form-label">Tài Khoản </label>
                                    <div class="col-sm-10">
                                        <input class="form-control" type="text"placeholder="..." id="username"
                                            value="<%=infoAdmin && infoAdmin.username && infoAdmin.username%>"
                                        >
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label for="example-text-input" class="col-sm-2 col-form-label">Mật Khẩu </label>
                                    <div class="col-sm-10">
                                        <input class="form-control" type="text"placeholder="..." id="password"
                                            value=""
                                        >
                                    </div>
                                </div>
                            </div>
                            <div style="margin: 0 auto; display: table">
                                <%if(infoAdmin){%>
                                    <button type="button" class="btn btn-primary waves-effect waves-light btn-lg" style="padding: 10px 100px;" id="btnUpdateGroup" _groupID=<%=infoAdmin._id%> >
                                        Cập Nhật Tài Khoản
                                    </button>
                                    <button type="button" class="btn btn-info waves-effect waves-light btn-lg" style="left: 20px; padding: 10px 100px;" id="btnUpdateGroupAndGoBack" _adminID=<%=infoAdmin._id%>>
                                        Cập Nhật và Trở Lại Danh Sách
                                    </button>
                                <%} else {%>
                                    <button type="button" class="btn btn-primary waves-effect waves-light btn-lg" style="padding: 10px 100px;" id="btnCreateAdmin" >
                                        Tạo Mới Tài Khoản
                                    </button>
                                    <button type="button" class="btn btn-info waves-effect waves-light btn-lg" style="left: 20px; padding: 10px 100px;" id="btnCreateAdminAndGoBack" >
                                        Tạo Mới và Trở Lại Danh Sách
                                    </button>
                                <%}%>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- container-fluid -->
    </div>
    <!-- content -->
    <%include ./utils/footer.ejs%>
</div>