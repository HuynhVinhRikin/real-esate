<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container-fluid">
            <br><br>
            <div class="row">
                <div class="col-md-12">
                    <div class="card m-b-20">
                        <div class="card-body">
                            <div class="form-group">
                                <label>
                                    <strong>Cấu Hình SEO</strong>
                                </label>
                                <div>
                                    <textarea required="" class="form-control" id="txtSEO" rows="5"><% if (infoConfig) { %><%= infoConfig.seo && infoConfig.seo %><% } %></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="card m-b-20">
                        <div class="card-body">
                            <div class="form-group">
                                <label>
                                    <strong>Link Fanpage</strong>
                                </label>
                                <div>
                                    <textarea required="" class="form-control" id="txtLinkFanpage" rows="1"><% if (infoConfig) { %><%= infoConfig.linkFanpage && infoConfig.linkFanpage %><% } %></textarea>
                                </div>
                            </div>

                            <div class="form-group">
                                <label>
                                    <strong>Từ Khoá Chặn</strong>
                                </label>
                                <div>
                                    <textarea required="" class="form-control" id="txtProhibitKeys" rows="10"><% if (infoConfig) { %><%= infoConfig.prohibitKeys && infoConfig.prohibitKeys %><% } %></textarea>
                                </div>
                            </div>
                           <% if (infoConfig) { %>
                                <button type="button" _id='<%= infoConfig._id %>' class="btn btn-outline-primary waves-effect waves-light btn-lg fa-pull-right" style="margin: 0 auto; display: block" id="btnUpdate" >Cập Nhật</button>
                           <% }else{ %>
                                <button type="button" class="btn btn-outline-primary waves-effect waves-light btn-lg fa-pull-right" style="margin: 0 auto; display: block" id="btnAdd" >Thêm Mới</button>
                           <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- container-fluid -->
    </div>
    <!-- content -->
    <%include ./utils/footer.ejs%>
</div>