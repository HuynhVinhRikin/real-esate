<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container-fluid">
            <br><br>
            <div class="row">
                <div class="col-md-12"> 
                    <div class="card m-b-20">
                        <div class="card-body">
                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-2 col-form-label">Tiêu đề menu</label>
                                <div class="col-sm-10">
                                    <input class="form-control" type="text"placeholder="Nhập tiêu đề Menu" id="txtTitle" <% if (menu) { %>
                                        value="<%= menu.title && menu.title %>"
                                    <% } %>>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="example-text-input" class="col-sm-2 col-form-label">URL</label>
                                <div class="col-sm-10">
                                    <input class="form-control" type="text" id="txtUrl" <% if (menu) { %>
                                        value="<%= menu.url && menu.url %>"
                                    <% } %>>
                                </div>
                            </div>
                            <% if (menu) { %>
                                <button type="button" class="btn btn-success waves-effect waves-light" style="margin: 0 auto; display: block" id="btnUpdate" _url="<%= menu.url && menu.url%>" >Cập Nhật</button>
                            <% }else{ %>
                                <button type="button" class="btn btn-success waves-effect waves-light" style="margin: 0 auto; display: block" id="btnAdd" >Thêm Mới</button>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- container-fluid -->
    </div>
    <!-- content -->
    <%include ./utils/footer.ejs%>
</div>