<div class="t-home-feature-container">
    <% listBlogSolutionHome && listBlogSolutionHome.listBlogs && listBlogSolutionHome.listBlogs.forEach((product, index) =>{%>
        <%
            let _background = 1
            if(index%2==0){
                _background = 2
            }
        
        %>
    <div class="t-home-feature">
        <img class="t-home-feature-bg" src="/template/images/home-feature-bg<%=_background%>.jpg" alt="Feature" />
        <img class="t-home-feature-img" src="/template/images/home-feature-img1.png" alt="Feature" />
        <p>
            <%=product && product.title%>
        </p>
        <div>
            <%=product && product.description%>
        </div>
        <a class="t-product-slider-item-link" href="/details-blog/?slug=<%=product.slug%>&category=<%=product.category._id%>"><%- lang(langKey,'details')%> <img src="/template/images/icon-arrow-right.svg" alt="Arrow" /></a>
    </div>
    <%})%>
</div>

