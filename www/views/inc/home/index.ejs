
<!--_______________________________HEADER_______________________________________-->
<button class="flat-btn hide-pc t-mobile-menu-btn"><img src="/template/images/mobile-menu.svg" alt="Menu" /></button>
<% include ../core/topbar.ejs %>

<!--__________________________________MAIN CONTENT____________________________________-->
<div class="t-home-banner">
    <img class="t-home-banner-img" src="/template/images/banner-home.png" alt="Banner" />
    <img class="t-home-banner-footer" src="/template/images/banner-home-bg-footer.png" alt="Banner footer" />
    <div class="container">
        <div class="t-home-banner-content">
            <h1 class="thbc-title">
                <%- lang(langKey,'giai_phap_quan_tri_doanh_nghiep_toan_dien')%>
            </h1>
            <p class="thbc-description">
                <%- lang(langKey,'mo_ta_trang_chu_1')%>
            </p>
            <div  class="thbc-link"><a  data-toggle="modal" href="#t-invite-modal" class="btn"><%- lang(langKey,'join_us')%></a></div>
            <div class="thbc-img"><img src="/template/images/banner-home-img.png" alt="Banner" /></div>
        </div>
    </div>
    <div class="t-home-scrolldown">
        <button class="btn t-home-scrolldown-btn"><img src="/template/images/icon-arrow-down.png" /></button>
    </div>
</div>

<!--___________________________________STRUCTURE________________________________________-->
<div class="t-home-block">
    <img class="t-home-banner-img" src="/template/images/banner-home2.png" alt="Banner" />
    <img class="t-home-banner-footer" src="/template/images/banner-home-bg-footer2.png" alt="Banner footer" />
    <div class="container">
        <div class="t-home-block-content">
            <p class="t-title">
                <%- lang(langKey,'de_ban_hieu_hon_ve')%> <span class="color-blue">Trixgo</span>
            </p>
            <p class="t-description">
                <%- lang(langKey,'short_info_trixgo')%>
            </p>
            <div class="thbc-img"><img src="/template/images/home-feature.png" alt="Banner" /></div>
        </div>
    </div>
</div>

<!--_________________________________OUR CUSTOMER______________________________-->
<div class="t-home-block bg-white">
    <img class="t-home-banner-footer" src="/template/images/banner-home-bg-footer.png" alt="Banner footer" />
    <div class="container">
        <div class="t-home-block-content">
            <p class="t-title">
                <%- lang(langKey,'khach_hang')%>  <span class="color-blue"><%- lang(langKey,'of_us')%></span>
            </p>
            <p class="t-description">
                <%- lang(langKey,'my_customer_is')%>
            </p>
            <div class="t-home-customer row">
                <% listBlogCustomerTrix && listBlogCustomerTrix.listBlogs && listBlogCustomerTrix.listBlogs.forEach((blog, index) =>{ %>
                    <div class="t-home-customer-item col-12 col-lg-4">
                        <img src="/template/images/home-img-customer<%= index+1%>.png" alt="Customer" />
                        <p><%=blog.title%></p>
                        <span>
                            <%=blog.description%>
                        </span>
                        <div>
                            <a href="/details-blog/?slug=<%=blog.slug%>&category=<%=blog.category._id%>"><%- lang(langKey,'details')%> <img src="/template/images/icon-arrow-right.svg" alt="Arrow" /></a>
                        </div>
                    </div>
                <%})%>
            </div>
        </div>
    </div>
    <div class="t-home-scrolldown">
        <button class="btn t-home-scrolldown-btn"><img src="/template/images/icon-arrow-down.png" /></button>
    </div>
</div>

<!--____________________________________OUR PRODUCT________________________________-->
<div class="t-home-block t-home-product">
    <img class="t-home-banner-footer" src="/template/images/banner-home-bg-footer3.png" alt="Banner footer" />
    <div class="container">
        <div class="t-home-block-content">
            <p class="t-title">
                <%- lang(langKey,'product')%> <span class="color-blue"><%- lang(langKey,'of_us')%></span>
            </p>
            <p class="t-description">
                <%- lang(langKey,'my_product_is')%>
            </p>
            <div class="t-home-product-img">
                <img src="/template/images/home-banner-product.jpg" alt="Banner" />
            </div>
            <div class="t-home-product-slider-container">
                <div class="t-home-product-slider" id="t-home-product-slider">
                    <% listBlogProductTrix && listBlogProductTrix.listBlogs && listBlogProductTrix.listBlogs.forEach((blog, index) =>{ %>
                        <%
                            let textCorlor = 'color-white';
                            let classBlue = 't-home-product-slider-item-blue';

                            let styleBackgroud = 'background-color : #0160e2';
                            if(index != 0){
                                styleBackgroud = '';
                                classBlue = '';
                                textCorlor = 'color-blue';
                            }
                        %>
                        <div class="col-12 col-lg-4 t-home-product-slider-item  <%=classBlue%>">
                            <div class="t-home-product-slider-item-wrapper" style="<%=styleBackgroud%>">
                                <img src="<%= blog.image || '/template/images/home-icon-product2.png' %>" alt="Product" />
                                <p>
                                    <span class="<%= textCorlor %>"><%=blog.title%></span>
                                    <!-- <span class="color-black">và trao đổi thông tin.</span> -->
                                </p>
                                <div>
                                    <a  class= "<%= textCorlor %>" href="/details-blog/?slug=<%=blog.slug%>&category=<%=blog.category._id%>"><%- lang(langKey,'details')%> <img  class= "<%= textCorlor %>" src="/template/images/icon-arrow-right.svg" alt="Arrow" /></a>
                                </div>
                            </div>
                        </div>
                    <%})%>
                </div>
            </div>
        </div>
    </div>
</div>

